<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/driver_ex_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loagingFragment"
        android:name="com.example.driverex.view.fragment.LandingFragment"
        android:label="fragment_loaging"
        tools:layout="@layout/fragment_landing" >
        <action
            android:id="@+id/action_loagingFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/left_to_right_animation"
            app:exitAnim="@anim/right_to_left_animation"
            app:popUpTo="@id/loagingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.driverex.view.fragment.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/left_to_right_animation"
            app:exitAnim="@anim/right_to_left_animation"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.driverex.view.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_userDetailsFragment"
            app:destination="@id/userDetailsFragment"
            app:enterAnim="@anim/left_to_right_animation"
            app:exitAnim="@anim/right_to_left_animation" />
        <action
            android:id="@+id/action_homeFragment_to_loagingFragment"
            app:destination="@id/loagingFragment"
            app:enterAnim="@anim/left_to_right_animation"
            app:exitAnim="@anim/right_to_left_animation"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/userDetailsFragment"
        android:name="com.example.driverex.view.fragment.UserDetailsFragment"
        android:label="fragment_user_details"
        tools:layout="@layout/fragment_user_details" >
        <action
            android:id="@+id/action_userDetailsFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/left_to_right_animation"
            app:exitAnim="@anim/right_to_left_animation" />
        <argument
            android:name="userBundle"
            app:argType="com.example.driverex.model.data.EmployeeData" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.driverex.view.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loagingFragment"
            app:destination="@id/loagingFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/left_to_right_animation"
            app:exitAnim="@anim/right_to_left_animation"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>